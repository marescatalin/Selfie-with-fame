<!doctype html>
<html lang="en">
<head>
    <title>New Event</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--<link rel="stylesheet" type="text/css" href="stylesheets/global.css">-->
    <link rel="stylesheet" type="text/css" href="../stylesheets/story.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="../javascripts/idb.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <script src="../javascripts/database.js"></script>
    <script src="../javascripts/myevent.js"></script>
</head>
<body>
<div class="container">
    <div class="card">
        <div class="card-header">
            New Event
        </div>
        <div class="card-body">
            <div class="form-container">
                <form id="post-form" method="post" action="/myevent/new">
                    <div class="form-group">
                        <label for="myevent-name">Name</label>
                        <input name="name" type="text" class="form-control" id="myevent-name"
                               placeholder="Justin Bieber Alabama concert">
                    </div>
                    <div class="form-group">
                        <label for="myevent-description">Description</label>
                        <textarea name="description" class="form-control" id="myevent-description" rows="5"
                                  placeholder="What is the event about?"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="myevent-startdate">Start Date</label>
                        <input class="form-control" type="datetime-local" name="startDate" id="myevent-startdate">
                    </div>
                    <div class="form-group">
                        <label for="myevent-enddate">End Date</label>
                        <input class="form-control" type="datetime-local" name="endDate" id="myevent-enddate">
                    </div>
                    <div class="form-group">
                        <label for="myevent-address">Address</label>
                        <input name="address" type="text" class="form-control" id="myevent-address"
                               placeholder="The Arena, 14 Red Lane st, Sheffield, United Kingdom">
                    </div>
                    <div class="form-group">
                        <label for="myevent-postcode">Address</label>
                        <input name="postcode" type="text" class="form-control" id="myevent-postcode"
                               placeholder="S10 4SU">
                    </div>
                </form>
                <form enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="file" name="file">
                        <button type="button" class="btn btn-secondary btn-sm mt-1" id="upload">
                            Add
                        </button>
                    </div>
                </form>
                <div class="accordion mb-2" id="myEventPicturesAccordion">
                    <div class="card">
                        <div class="card-header" id="headingOne" data-toggle="collapse"
                             data-target="#collapseEventPictures" aria-expanded="false" aria-controls="collapsePictures">
                            Pictures
                        </div>
                        <div id="collapseEventPictures" class="collapse" aria-labelledby="headingOne"
                             data-parent="#myEventPicturesAccordion">
                            <ul class="list-group">
                            </ul>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-primary float-right mt-1" id="myevent-submit">Create</button>
            </div>
        </div>
    </div>
    <div class="modal fade" id="photo-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header p-2">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body p-0">
                    <video playsinline autoplay class="img-fluid"></video>
                    <canvas class="img-fluid"></canvas>
                </div>
                <div class="d-flex justify-content-center p-2">
                    <button type="button" class="btn btn-primary" id="picture-snapshot-button">Take Picture</button>
                    <button type="button" class="btn btn-secondary btn-retry mr-1" id="picture-retry-button">
                        <span class="fas fa-undo"></span>
                    </button>
                    <button type="button" class="btn btn-primary btn-retry" id="picture-save-button"
                            data-dismiss="modal">Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>