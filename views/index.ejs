<!doctype html>
<html lang="en">

<head>
    <title>Home</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link href="stylesheets/google.parent-marker.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="stylesheets/global.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.min.css">
    <script src="javascripts/jquery-3.3.1.min.js"></script>
    <script src="javascripts/popper.min.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/idb.js"></script>
    <script src="javascripts/database.js"></script>
    <script src="javascripts/index.js"></script>

</head>
<body onload = "checkLogin(<%=login_is_correct%>,<%=username%>)">
<div class="container">
    <div class="d-flex justify-content-center bg">
        <div class="form-container">
            <form id='signin-form' action="map" method="POST">
                <h1>Selfie with fame</h1>
                <div class="form-group">

                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" name="username" id="username" aria-describedby="emailHelp"
                           placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe">
                    <label class="form-check-label" for="exampleCheck1">Remember me</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="button" id='login' class="btn btn-primary">Log in</button>
                </div>
                <br>
                <div class="d-flex justify-content-center">
                    <button type="button" id="signup-get" class="btn btn-primary">
                        Sign Up
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<form id="signup-form" method="GET" action="/signup" hidden></form>

</body>
</html>