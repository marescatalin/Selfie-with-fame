<body>
<div class="container">
    <div class="d-flex justify-content-center bg">
        <div class="form-container">
            <form id='signin-form' action="map" method="POST">
                <h1>Selfie with fame</h1>
                <div class="form-group">

                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" name="username" aria-describedby="emailHelp"
                           placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" name="rememberMe">
                    <label class="form-check-label" for="exampleCheck1">Remember me</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="button" id='login' class="btn btn-primary">Log in</button>
                </div>
                <br>
                <div class="d-flex justify-content-center">
                    <button type="button" id="signup-get" class="btn btn-primary">
                        Sign Up
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<form id="signup-form" method="GET" action="/signup" hidden></form>

